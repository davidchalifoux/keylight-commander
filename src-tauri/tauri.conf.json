{
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Keylight Commander",
    "version": "0.0.4"
  },
  "tauri": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/davidchalifoux/keylight-commander/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUxQUJDNEM4RkRBNUNFNDkKUldSSnpxWDl5TVNyNGUvQXZ1NzJsMDlPSEc5ckQ2OFk3dFJKdUhMMXRYWDF6anlzNkRpbk5hWjQK"
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://*"]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setSkipTaskbar": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.chalifoux.keylight-commander",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Keylight Commander",
        "width": 480,
        "height": 512,

        "minWidth": 320,
        "minHeight": 256,

        "fullscreen": false,

        "skipTaskbar": true,

        "resizable": true,
        "closable": true,
        "minimizable": false,
        "maximizable": true,
        "decorations": true
      }
    ]
  }
}
